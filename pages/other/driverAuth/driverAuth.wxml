
<!-- 尚未验证 -->
<view wx:if="{{driverNeedAuth}}">
  <view class="cu-form-group margin-top">
    <view class="title">姓名</view>
    <input placeholder="请填写真实姓名"></input>
  </view>
  <view class="cu-form-group">
    <view class="title">手机号</view>
    <input placeholder="请填写您的手机号"></input>
  </view>
  <view class="cu-form-group margin-top">
    <view class="title">车型</view>
    <input placeholder="请填写您的车型"></input>
  </view>
  <view class="cu-form-group">
    <view class="title">车牌号</view>
    <input placeholder="请填写您的车牌号"></input>
  </view>
  <view class="cu-form-group">
    <view class="title">身份证号</view>
    <input placeholder="请填写您的身份证号"></input>
  </view>

  <view class="cu-bar bg-white margin-top">
		<view class="action">
			驾驶证照片上传
		</view>
		<view class="action">
			{{imgList.length}}/4
		</view>
  </view>
  <view class="cu-form-group">
		<view class="grid col-2 grid-square flex-sub">
			<view class="bg-img" wx:for="{{imgList}}" wx:key="index" bindtap="ViewImage" data-url="{{imgList[index]}}">
				<image src='{{imgList[index]}}' mode='aspectFill'></image>
				<view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
					<text class="cuIcon-close"></text>
				</view>
			</view>
			<view class="solids" bindtap="ChooseImage" wx:if="{{imgList.length<2}}">
				<text class="cuIcon-cameraadd"></text>
			</view>
		</view>
  </view>
  <view class="padding flex flex-direction">
    <button class="cu-btn bg-red margin-tb-sm lg">开始认证</button>
  </view>
</view>


<!-- 已经验证的 -->
<view wx:else>
  <view class="cu-form-group margin-top">
    <view class="title">姓名</view>
    <view>{{driverName}}</view>
  </view>
  <view class="cu-form-group">
    <view class="title">手机号</view>
    <view>{{driverPhone}}</view>
  </view>
  <view class="cu-form-group margin-top">
    <view class="title">车型</view>
    <view>{{driverCarType}}</view>
  </view>
  <view class="cu-form-group">
    <view class="title">车牌号</view>
    <view>{{driverCarNum}}</view>
  </view>
  <view class="cu-form-group">
    <view class="title">身份证号</view>
    <view>{{driverIDcard}}</view>
  </view>

  <view class="padding flex flex-direction">
    <button class="cu-btn bg-red margin-tb-sm lg">更改信息</button>
  </view>
</view>
